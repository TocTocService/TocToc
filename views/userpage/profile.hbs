        <h4> {{ serviceDate }} </h4>

        <ul>
          <li> <b>Para</b>: {{ user.name }} </li>
          <li> <b>TOC'leaner</b>: {{ cleaner.name }} </li>
          <li> <b>Estado</b>: {{ confirm }} </li>
           <a href="/delete/{{_id}}">Cancelar servicio</a>
          
        </ul>
        {{!-- {{#if pastDate}} --}}
        <li><a href="/rates/{{cleaner.id}}">Valora a tu TOC'leaner</a></li>
        {{!-- {{/if}} --}}
      </li>
  {{/each}}
{{/if}}
</ul>
{{/if}}
