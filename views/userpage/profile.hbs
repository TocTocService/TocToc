<h1>{{title}}</h1>
<p>Hola {{user.username}}</p>


{{#if user.isToc}}
  <h3> INFO sobre tu servicio </h3>

  <p>
    El precio por hora es: <b>{{ user.fee }}â‚¬</b>
  </p>


  <h4>Servicios:</h4>
{{#each services}}
      <li>
        <h4> {{ serviceDate }} </h4>

        <ul>
          <li> <b>Para</b>: {{ user.username }} || <a href="/public/{{user._id}}">Ver ficha</a> </li>
        </ul>

        {{#ifEquals this.confirm "Pendiente"}}
        <li><a href="/confirm/{{cleaner._id}}">Confirma servicio</a></li>
