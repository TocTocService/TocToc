<form id="rating" method="post" action="/rates/{{cleaner.id}}">
  <fieldset class="rating">
    <legend>Rapidez</legend>
    <input name="speed" type="radio" id="speed1" value="5" on="change:rating.submit" />
    <label for="speed" title="1 stars">☆</label>

    <input name="speed" type="radio" id="speed2" value="4" on="change:rating.submit" />
    <label for="speed" title="2 stars">☆</label>

    <input name="speed" type="radio" id="speed3" value="3" on="change:rating.submit" />
    <label for="speed" title="3 stars">☆</label>

    <input name="speed" type="radio" id="speed4" value="2" on="change:rating.submit" checked="checked"/>
    <label for="speed" title="4 stars">☆</label>

    <input name="speed" type="radio" id="speed5" value="1" on="change:rating.submit"/>
    <label for="speed" title="5 stars">☆</label>
  </fieldset>
  <fieldset class="rating">
    <legend>Satisfacción</legend>
    <input name="satisfaction" type="radio" id="sat1" value="5" on="change:rating.submit"/>
    <label for="satisfaction" title="1 stars">☆</label>

    <input name="satisfaction" type="radio" id="sat2" value="4" on="change:rating.submit"/>
    <label for="satisfaction" title="2 stars">☆</label>

    <input name="satisfaction" type="radio" id="sat3" value="3" on="change:rating.submit" checked="checked"/>
    <label for="satisfaction" title="3 stars">☆</label>

    <input name="satisfaction" type="radio" id="sat4" value="2" on="change:rating.submit"/>
    <label for="satisfaction" title="4 stars">☆</label>

    <input name="satisfaction" type="radio" id="sat5" value="1" on="change:rating.submit"/>
    <label for="satisfaction" title="5 stars">☆</label>
  </fieldset>
  <label for="recommendation">Recomendarías a est@ TOC'leaner</label>
  <div>
    <input type="radio" name="recommendation" value="YES" checked="checked"> YES<br>
    <input type="radio" name="recommendation" value="NO"> NO<br>
  </div>
  <button>Enviar</button>
  
</form>